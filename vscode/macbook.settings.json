    // completion
    "emmet.triggerExpansionOnTab": true,        // использование emmet
    // "emmet.useInlineCompletions": false,
    // "editor.suggest.preview": true,          // виртуальный текст, не особо полезно
    "editor.tabCompletion": "on",               // без этого выбирает только самый первый
    "editor.acceptSuggestionOnEnter": "off",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.hover.delay": 200,
    "editor.wordWrap": "off",

    "git.openRepositoryInParentFolders": "never",
    "explorer.confirmDelete": false,
    "terminal.integrated.fontFamily": "'MesloLGS NF'",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "liveServer.settings.donotShowInfoMsg": true,
}
