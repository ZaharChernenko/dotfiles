// Some example tasks for common languages.
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "cwd": "$ZED_WORKTREE_ROOT",
    "program": "$ZED_FILE",
    "request": "launch"
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "cwd": "$ZED_WORKTREE_ROOT",
    "program": "$ZED_FILE",
    "request": "launch",
    "type": "pwa-node"
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "cwd": "$ZED_WORKTREE_ROOT",
    "request": "launch",
    "console": "integratedTerminal",
    "type": "pwa-node"
  },
  {
    "label": "Compile and debug C++",
    "adapter": "CodeLLDB",
    "cwd": "${ZED_WORKTREE_ROOT}",
    "program": "${ZED_WORKTREE_ROOT}/cpp_output",
    "build": {
      "command": "g++ -o cpp_output -g -std=c++2a *.cpp"
    },
    "request": "launch"
  }
]
